            {
                id: 4,
                url: "https://images.unsplash.com/photo-1563461660947-507ef3a36f54?auto=format&fit=crop&q=80&w=400&h=300",
                title: "Intento de cocina nivel: Chernobyl",
                author: "Carlos",
                date: "05 Oct 2024, 20:00",
                tags: ["comida", "peligro"],
                comments: 1
            },
            {
                id: 5,
                url: "https://images.unsplash.com/photo-1594322436404-5a0526db4d13?auto=format&fit=crop&q=80&w=400&h=350",
                title: "POV: Se cay√≥ el servidor otra vez",
                author: "Ana",
                date: "01 Oct 2024, 11:30",
                tags: ["trabajo", "sad"],
                comments: 8
            }
        ];

        // --- 2. RENDERIZADO DEL FEED ---
        const feedContainer = document.getElementById('meme-feed');
        const filterTitle = document.getElementById('current-filter');

        function renderMemes(filterAuthor = null) {
            feedContainer.innerHTML = ''; 
            
            if(filterAuthor) {
                filterTitle.textContent = "UPLOADS DE: " + filterAuthor.toUpperCase();
                filterTitle.classList.add('text-red-500', 'blink'); 
            } else {
                filterTitle.textContent = "TODOS";
                filterTitle.classList.remove('text-red-500', 'blink');
                filterTitle.classList.add('text-white');
            }

            const filteredData = filterAuthor 
                ? memesData.filter(m => m.author === filterAuthor)
                : memesData;

            if (filteredData.length === 0) {
                feedContainer.innerHTML = `
                    <div class="text-center p-8 bg-black bevel-in border border-red-500">
                        <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExM2Q5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZGU5ZyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/LpW8KyCkDhteg/giphy.gif" class="mx-auto w-12 h-12 mb-4">
                        <p class="font-bold text-red-600 blink">ERROR FATAL: DATOS NO ENCONTRADOS.</p>
                        <p class="text-gray-500">El usuario ha sido eliminado de la matrix.</p>
                        <button class="btn-retro mt-4" onclick="resetFilter()">REINICIAR SISTEMA</button>
                    </div>
                `;
                return;
            }

            filteredData.forEach(meme => {
                const post = document.createElement('div');
                post.className = "bg-[#333] bevel-out p-1 mb-6 relative group"; 

                post.innerHTML = `
                    <!-- Barra de t√≠tulo -->
                    <div class="bg-gradient-to-r from-black to-[#300000] text-gray-300 px-2 py-1 text-xs font-bold flex justify-between items-center mb-2 border border-black">
